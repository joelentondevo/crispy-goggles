    @model FormEncode.Models.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="Foodmenu">
    <table class="Menutable" asp-controller="Home" method="get" asp-action="getMenu">
            @foreach(var product in Model.ProductSet) 
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>
                    @if(product.ItemStock > 0) {
                        <button class="addbutton" asp>+</button>
                    }
                    </td>
                </tr>
            }
        @if (Model.User?.Username != null)
        {
            <tr>
                <td>@Model.User.Username</td>
            </tr>
        }
            <tr>
            </tr>
    </table>
</div>
    